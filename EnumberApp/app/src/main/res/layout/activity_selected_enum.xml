<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/selectedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/detail"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="584dp"
        android:layout_margin="10dp"
        android:layout_weight="8"
        android:background="@drawable/recyclerview_bg"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#BA6C86"
            android:text="@string/click_to_know_the_status"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="176dp"
                android:layout_height="435dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="80dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/details"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:text="@string/details"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:text="@string/status"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/sideeff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:text="@string/side_effect"
                    android:textColor="@color/black"
                    android:textSize="24dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="443dp"
                android:layout_marginTop="80dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/selectedname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enumber"
                    android:textColor="#571B7E"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/selecteddetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="69dp"
                    android:text="Enumber"
                    android:textColor="#571B7E"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/selectedstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="64dp"
                    android:text="Enumber"
                    android:textColor="#571B7E"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/selectedsideeff"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="77dp"
                    android:text="Enumber"
                    android:textColor="#571B7E"
                    android:textSize="24dp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="171dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/historybt"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="45dp"
                android:backgroundTint="#98596E"
                android:text="@string/add_to_history"
                android:textAllCaps="false" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="450dp"
            android:layout_weight="2"
            android:orientation="vertical">


            <Button
                android:id="@+id/sharebtn"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="45dp"
                android:text="@string/share"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:backgroundTint="#98596E" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>